class Solution {
    public int nearestValidPoint(int x, int y, int[][] points) {
        int ans = -1;
        int minDist = Integer.MAX_VALUE;
        
        for (int i = 0; i < points.length; i++) {
            int a = points[i][0];
            int b = points[i][1];
            // check validity
            if (a == x || b == y) {
                int dist = Math.abs(a - x) + Math.abs(b - y);
                if (dist < minDist) {
                    minDist = dist;
                    ans = i;
                }
                // if equal distance, we keep the earlier index because
                // we only update when strictly less
            }
        }
        
        return ans;
    }
}
