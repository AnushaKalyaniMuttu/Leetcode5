class Solution {
    
    public long maxMatrixSum(int[][] matrix) {
        long sum = 0;
        int negativeCount = 0;
        int minAbs = Integer.MAX_VALUE;
        
        for (int[] row : matrix) {
            for (int num : row) {
                if (num < 0) {
                    negativeCount++;
                }
                
                int absVal = Math.abs(num);
                sum += absVal;
                minAbs = Math.min(minAbs, absVal);
            }
        }
        
        if (negativeCount % 2 == 0) {
            return sum;
        } else {
            return sum - 2L * minAbs;
        }
    }
}
