class Solution {

    public int addRungs(int[] rungs, int dist) {
        int prev = 0;
        int added = 0;

        for (int rung : rungs) {
            int gap = rung - prev;

            if (gap > dist) {
                added += (gap - 1) / dist;
            }

            prev = rung;
        }

        return added;
    }
}
