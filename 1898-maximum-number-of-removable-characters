class Solution {
    public int maximumRemovals(String s, String p, int[] removable) {
        int left = 0, right = removable.length, answer = 0;

        while (left <= right) {
            int mid = left + (right - left) / 2;
            if (isSubsequence(s, p, removable, mid)) {
                answer = mid;  // can remove mid characters
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }

        return answer;
    }

    private boolean isSubsequence(String s, String p, int[] removable, int k) {
        boolean[] removed = new boolean[s.length()];
        for (int i = 0; i < k; i++) removed[removable[i]] = true;

        int pi = 0;
        for (int si = 0; si < s.length() && pi < p.length(); si++) {
            if (!removed[si] && s.charAt(si) == p.charAt(pi)) {
                pi++;
            }
        }
        return pi == p.length();
    }
}
