class Solution {
    public int minimumBoxes(int n) {
        int base = 0; // number of boxes touching the floor
        int total = 0; // total number of boxes placed

        // First, find the largest triangular number sum â‰¤ n
        int h = 0;
        while (true) {
            h++;
            int tri = h * (h + 1) / 2;
            total += tri;
            if (total > n) {
                total -= tri;
                h--;
                break;
            }
        }

        // Base boxes for full levels
        base = h * (h + 1) / 2;

        // Place remaining boxes greedily on the floor
        int remaining = n - total;
        int extra = 0;
        for (int i = 1; remaining > 0; i++) {
            remaining -= i;
            extra++;
        }

        return base + extra;
    }
}
