public class Solution {

    public int arraySign(int[] nums) {
        int sign = 1;

        for (int n : nums) {
            if (n == 0) {
                return 0; // product becomes zero immediately
            }
            if (n < 0) {
                sign = -sign; // flip sign when encountering negative
            }
        }

        return sign;
    }
}
