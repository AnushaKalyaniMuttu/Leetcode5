/**
 * Definition for singly-linked list.
 * class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
    public ListNode mergeInBetween(ListNode list1, int a, int b, ListNode list2) {
        ListNode p = list1, q = list1;

        // Move p to the node at position a - 1
        for (int i = 0; i < a - 1; i++) {
            p = p.next;
        }
        // Move q to the node at position b
        for (int i = 0; i < b; i++) {
            q = q.next;
        }

        // Link in list2
        p.next = list2;

        // Traverse to end of list2
        while (p.next != null) {
            p = p.next;
        }

        // Connect end of list2 to the remainder of list1
        p.next = q.next;
        // Optionally detach the removed segment
        q.next = null;

        return list1;
    }
}
