class Solution {
    public int maxLengthBetweenEqualCharacters(String s) {
        int ans = -1;
        int[] firstSeen = new int[26];
        Arrays.fill(firstSeen, -1);

        for (int i = 0; i < s.length(); ++i) {
            int c = s.charAt(i) - 'a';
            if (firstSeen[c] == -1) {
                firstSeen[c] = i;
            } else {
                ans = Math.max(ans, i - firstSeen[c] - 1);
            }
        }

        return ans;
    }
}
