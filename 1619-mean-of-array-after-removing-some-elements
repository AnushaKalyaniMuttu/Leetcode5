import java.util.Arrays;

class Solution {
    public double trimMean(int[] arr) {
        // Step 1: Sort the array
        Arrays.sort(arr);
        
        // Step 2: Determine how many elements to trim (5%)
        int offset = arr.length / 20; // equivalent to 5%

        // Step 3: Compute the average of the remaining elements using Java Streams
        return Arrays.stream(arr, offset, arr.length - offset)
                     .average()
                     .orElse(0);
    }
}
