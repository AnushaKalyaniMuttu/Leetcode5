class Solution {
     public int specialArray(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;

        for (int x = 1; x <= n; x++) {
            int idx = lowerBound(nums, x);
            int count = n - idx; // count of elements >= x
            if (count == x) return x;
        }
        return -1;
    }

    // Helper: Find first index where nums[i] >= target
    private int lowerBound(int[] nums, int target) {
        int left = 0, right = nums.length;
        while (left < right) {
            int mid = left + (right - left) / 2;
            if (nums[mid] >= target) right = mid;
            else left = mid + 1;
        }
        return left;
    }
}
