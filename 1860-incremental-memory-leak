public class Solution {

    public int[] memLeak(int memory1, int memory2) {
        int i = 1;
        // Continue while at least one stick can allocate i bits
        while (memory1 >= i || memory2 >= i) {
            if (memory1 >= memory2) {
                memory1 -= i;
            } else {
                memory2 -= i;
            }
            i++;
        }
        // i is the crash time
        return new int[]{i, memory1, memory2};
    }
}
