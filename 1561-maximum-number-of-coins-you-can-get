import java.util.Arrays;
class Solution {
    public int maxCoins(int[] piles) {
        Arrays.sort(piles);
        int ans = 0;
        int n = piles.length;
        // start from second largest at index nâˆ’2, go backwards skipping every other one,
        // until index >= n/3
        for (int i = n - 2; i >= n / 3; i -= 2) {
            ans += piles[i];
        }
        return ans;
    }
}
