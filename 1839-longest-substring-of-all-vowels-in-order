public class Solution {

    public int longestBeautifulSubstring(String word) {
        int n = word.length();
        int result = 0;
        
        int count = 0;     // current substring length
        int unique = 0;    // number of vowels seen in correct order
        char prev = 'z';   // arbitrary high char to force reset on start
        
        for (int i = 0; i < n; i++) {
            char c = word.charAt(i);
            
            if (i == 0 || c < prev) {
                // reset if order breaks or first char
                count = 1;
                unique = (c == 'a') ? 1 : 0;
            } else {
                count++;
                if (c > prev) {
                    unique++;
                }
            }
            
            prev = c;
            
            if (unique == 5) {
                result = Math.max(result, count);
            }
        }
        
        return result;
    }
}
