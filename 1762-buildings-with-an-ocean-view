class Solution {
    public int[] findBuildings(int[] heights) {
        int n = heights.length;
        List<Integer> result = new ArrayList<>();
        int rightMax = 0;  // the maximum height to the right of current building
        
        // Go from rightmost building to leftmost
        for (int i = n - 1; i >= 0; i--) {
            if (heights[i] > rightMax) {
                // This building is taller than anything to its right => it has an ocean view
                result.add(i);
                rightMax = heights[i];
            }
        }
        
        // Now result has indices in decreasing order (because we traversed from right to left)
        Collections.reverse(result);
        
        // Convert list to array
        int[] ans = new int[result.size()];
        for (int i = 0; i < result.size(); i++) {
            ans[i] = result.get(i);
        }
        return ans;
    }
}
