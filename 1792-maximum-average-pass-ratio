import java.util.PriorityQueue;

public class Solution {
    // Method to calculate the maximum average ratio after k operations
    public double maxAverageRatio(int[][] classes, int k) {
        PriorityQueue<int[]> pq = new PriorityQueue<>((a, b) -> {
            // Custom comparator to prioritize the largest increase in ratio
            double diffA = (double)(a[0] + 1) / (a[1] + 1) - (double)a[0] / a[1];
            double diffB = (double)(b[0] + 1) / (b[1] + 1) - (double)b[0] / b[1];
            return Double.compare(diffB, diffA); // Max-heap, prioritize largest gain
        });

        // Add all classes to the priority queue
        for (int[] cls : classes) {
            pq.add(cls);
        }

        // Perform k operations
        for (int i = 0; i < k; i++) {
            int[] current = pq.poll();
            // Increment the numerator and denominator by 1
            current[0]++;
            current[1]++;
            pq.add(current);
        }

        // Calculate the total average ratio
        double total = 0;
        while (!pq.isEmpty()) {
            int[] current = pq.poll();
            total += (double) current[0] / current[1];
        }

        return total / classes.length;
    }
}
