class LongestSubstringOfOneRepeatingCharacter {

    public int longestRepeatingSubstring(String s) {
        int maxLen = 0;
        int count = 0;
        char prev = 0;

        for (char c : s.toCharArray()) {
            if (c == prev) {
                count++;
            } else {
                count = 1;
                prev = c;
            }
            maxLen = Math.max(maxLen, count);
        }

        return maxLen;
    }
}
