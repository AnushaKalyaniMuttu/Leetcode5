import java.util.*;

class Solution {
    public int maxWidthOfVerticalArea(int[][] points) {
        int n = points.length;
        int[] xs = new int[n];

        // collect all x-coordinates
        for (int i = 0; i < n; i++) {
            xs[i] = points[i][0];
        }

        // sort x-coordinates
        Arrays.sort(xs);

        // find max gap between consecutive x's
        int maxWidth = 0;
        for (int i = 1; i < n; i++) {
            maxWidth = Math.max(maxWidth, xs[i] - xs[i - 1]);
        }

        return maxWidth;
    }
}
