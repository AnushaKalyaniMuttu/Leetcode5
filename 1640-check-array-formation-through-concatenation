import java.util.*;

public class Solution {
    public boolean canFormArray(int[] arr, int[][] pieces) {
        // Map each piece by its first element for quick lookup
        Map<Integer, int[]> map = new HashMap<>();
        for (int[] piece : pieces) {
            map.put(piece[0], piece);
        }

        int i = 0;
        while (i < arr.length) {
            // If current number doesn't start any piece â†’ fail
            if (!map.containsKey(arr[i])) {
                return false;
            }

            int[] piece = map.get(arr[i]);
            // Check if arr segment matches the piece exactly
            for (int num : piece) {
                if (i >= arr.length || arr[i] != num) {
                    return false;
                }
                i++;
            }
        }
        return true;
    }
}
