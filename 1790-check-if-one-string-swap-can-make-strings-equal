class Solution {
    public boolean areAlmostEqual(String s1, String s2) {
        if (s1.equals(s2)) {
            return true;
        }
        int n = s1.length();
        // list to store indices where they differ
        int first = -1, second = -1;
        int diffCount = 0;
        for (int i = 0; i < n; i++) {
            if (s1.charAt(i) != s2.charAt(i)) {
                diffCount++;
                if (diffCount == 1) {
                    first = i;
                } else if (diffCount == 2) {
                    second = i;
                } else {
                    // more than 2 differences -> cannot fix with one swap
                    return false;
                }
            }
        }
        // Must have exactly 2 differences
        if (diffCount != 2) {
            return false;
        }
        // Check if swapping makes equal
        return s1.charAt(first) == s2.charAt(second)
            && s1.charAt(second) == s2.charAt(first);
    }
}
